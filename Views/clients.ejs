<% include partials/header %>

    <div class="container">
        <div class="row margin-top-20">
            <div class="col-lg-12">
                <h3 style="display:inline;">OVERVIEW</h3>
                <a title="add new client" href="/clients/new"><button class="dark-button move-right">New Client <i class="fas fa-plus-circle"></i></button></a>
            </div>
        </div>
        <div class="row">
            <% clients.forEach(function(client){ %>

                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                    <a class="client-card-link" href="/clients/<%= client._id %>">
                        <div class="client-card-square">
                            <div class="row general-row">
                                <div class="col-2 client-card-image">
                                    <img class="client-card-logo" alt="client logo" src="https://d2cx26qpfwuhvu.cloudfront.net/sale/wp-content/uploads/2018/07/23161039/UKFast.svg"></div>
                                <div class="col-10">
                                    <p class="values">
                                        <%= client.name %>
                                    </p>
                                    <p>
                                        <%= client.designation %>
                                    </p>
                                </div>
                            </div>
                            <div class="row general-row client-card-details">
                                <div class="col">
                                    <p> <span class="value-description"> Value</span> Â£
                                        <%= client.value %>
                                    </p>
                                    <p><span class="value-description"> Start:</span> <span class="value-description"> |   Expiry: </span>

                                    </p>

                                </div>
                            </div>

                        </div>
                    </a>
                </div>
                <% }) %>

        </div>
        <div class="row">
            <div class="dropdown-list move-right">
                <span class="light-button">Data <i class="fas fa-plus-circle"></i></span>
                <div class="dropdown-data">
                    <ul>
                        <a href="#">
                            <li class="drop-item">Broadcast</li>
                        </a>
                        <a href="#">
                            <li class="drop-item">Social</li>
                        </a>
                    </ul>
                </div>
            </div>
        </div>
    </div>






    <% include partials/footer %>