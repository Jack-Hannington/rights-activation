<% include partials/header %>

<div class="container">
  <div class="row general-row client-about-row">
    <div class="col">
      <h2>Welcome to your dashboard</h2>
      <p>Below you will see the clients you have added and their progress</p>
      <a title="add new client" href="/clients/new"><button class="dark-button">Add new client</button></a>
    </div>
  </div>
  <div class="row general-row">
    <% clients.forEach(function(client){ %>
    <div class="col-3">
      <div class="client-card-square">
        <div class="row general-row">
          <div class="col-2 client-card-image">
            <img class="client-card-logo" src="https://via.placeholder.com/50x50"></div>
          <div class="col-10">
            <p><%= client.name %> </p>
            <p><%= client.designation %></p>
          </div>
        </div>
        <div class="row general-row client-card-details">
          <div class="col">
            <p> <span class="value-description"> Value</span> Â£<%= client.value %></p>
          </div>
        </div>
        <div class="row general-row">
          <div class="col">
            <a href="/clients/<%= client._id %>"><button class="dark-button">View</button></a>
            <a href="/clients/<%= client._id %>/edit"><button class="info-button">Edit</button></a>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>





<% include partials/footer %>